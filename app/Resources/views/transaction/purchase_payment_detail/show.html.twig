{% extends 'transaction/layout.html.twig' %}

{% block title 'Show Purchase Payment Detail' %}

{% block actions %}
    {{ include('transaction/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Amount</th>
                <td>{{ purchasePaymentDetail.amount|default|number_format(2) }}</td>
            </tr>
            <tr>
                <th>Memo</th>
                <td>{{ purchasePaymentDetail.memo|default }}</td>
            </tr>
            <tr>
                <th>Total Receipt</th>
                <td>{{ purchasePaymentDetail.totalReceipt|default|number_format(2) }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
