{% extends 'transaction/layout.html.twig' %}

{% block title 'Show Journal Voucher Header' %}

{% block actions %}
    {{ include('transaction/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Transaction Date</th>
                <td>{{ journalVoucherHeader.transactionDate|default ? journalVoucherHeader.transactionDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ journalVoucherHeader.note|default }}</td>
            </tr>
            <tr>
                <th>Total Debit</th>
                <td>{{ journalVoucherHeader.totalDebit|default|number_format(2) }}</td>
            </tr>
            <tr>
                <th>Total Credit</th>
                <td>{{ journalVoucherHeader.totalCredit|default|number_format(2) }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
