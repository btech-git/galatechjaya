{% extends 'master/layout.html.twig' %}

{% block title 'Show Warehouse' %}

{% block actions %}
    {{ include('master/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ warehouse.code|default }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ warehouse.name|default }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ warehouse.address|default }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ warehouse.phone|default }}</td>
            </tr>
            <tr>
                <th>Contact Person</th>
                <td>{{ warehouse.contactPerson|default }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ warehouse.note|default }}</td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>{{ warehouse.isActive|default ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
