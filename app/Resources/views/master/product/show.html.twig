{% extends 'master/layout.html.twig' %}

{% block title 'Show Product' %}

{% block actions %}
    {{ include('master/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ product.code|default }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name|default }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ product.size|default }}</td>
            </tr>
            <tr>
                <th>Weighted Purchase Price</th>
                <td>{{ product.weightedPurchasePrice|default|number_format(2) }}</td>
            </tr>
            <tr>
                <th>Selling Price</th>
                <td>{{ product.sellingPrice|default|number_format(2) }}</td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>{{ product.isActive|default ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
