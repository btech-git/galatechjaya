{% extends 'staff/layout.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block actions %}
    {{ include('action.html.twig', {'url': path('staff_profile_show', { 'id': user.id }), 'label': 'Show Profile', 'button': 'btn btn-info', 'icon': 'glyphicon glyphicon-info-sign'}) }}
    {{ include('action.html.twig', {'url': path('staff_profile_edit', { 'id': user.id }), 'label': 'Edit Profile', 'button': 'btn btn-warning', 'icon': 'glyphicon glyphicon-edit'}) }}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        {{ form_row(form.oldPassword) }}
        {{ form_row(form.newPassword) }}
        <input class="btn btn-warning" type="submit" value="Change" data-confirm="Do you want to proceed?" />
    {{ form_end(form) }}
{% endblock %}
