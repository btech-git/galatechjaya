{% extends 'staff/layout.html.twig' %}

{% block title 'Transaction Menu' %}

{% block stylesheets %}
    <style>
        table thead tr th:nth-child(2), table tbody tr td:nth-child(2) { width: 30% }
        table thead tr th:nth-child(3), table tbody tr td:nth-child(3) { width: 30% }
    </style>
{% endblock %}

{% block content %}
    {% set menu = app.session.get('menu') %}
    
    {% if menu['sale_transaction'] %}
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th colspan="3" class="bg-info lead">
                        <strong>Penjualan</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% if menu['sale_invoice_header'] %}
                    <tr>
                        <td>Invoice Penjualan / Surat Jalan</td>
                        <td>
                            {% if is_granted('ROLE_SALE_INVOICE_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_sale_invoice_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_sale_invoice_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['sale_return_header'] %}
                    <tr>
                        <td>Retur Penjualan</td>
                        <td>
                            {% if is_granted('ROLE_SALE_RETURN_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_sale_return_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_sale_return_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endif %}
    {% if menu['purchase_transaction'] %}
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th colspan="3" class="bg-info lead">
                        <strong>Pembelian</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% if menu['purchase_order_header'] %}
                    <tr>
                        <td>Purchase Order</td>
                        <td>
                            {% if is_granted('ROLE_PURCHASE_ORDER_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_purchase_order_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_purchase_order_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['receive_header'] %}
                    <tr>
                        <td>Penerimaan Barang</td>
                        <td>
                            {% if is_granted('ROLE_RECEIVE_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_receive_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_receive_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['purchase_return_header'] %}
                    <tr>
                        <td>Retur Pembelian</td>
                        <td>
                            {% if is_granted('ROLE_PURCHASE_RETURN_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_purchase_return_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_purchase_return_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endif %}
    {% if menu['inventory_transaction'] %}
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th colspan="3" class="bg-info lead">
                        <strong>Gudang</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% if menu['adjustment_stock_header'] %}
                    <tr>
                        <td>Penyesuaian Stok</td>
                        <td>
                            {% if is_granted('ROLE_ADJUSTMENT_STOCK_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_adjustment_stock_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_adjustment_stock_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
