{% extends 'staff/layout.html.twig' %}

{% block title 'Finance Menu' %}

{% block stylesheets %}
    <style>
        table thead tr th:nth-child(2), table tbody tr td:nth-child(2) { width: 30% }
        table thead tr th:nth-child(3), table tbody tr td:nth-child(3) { width: 30% }
    </style>
{% endblock %}

{% block content %}
    {% set menu = app.session.get('menu') %}
    
    {% if menu['sale_finance'] %}
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th colspan="3" class="bg-info lead">
                        <strong>Penjualan</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% if menu['sale_receipt_header'] %}
                    <tr>
                        <td>Tanda Terima Penjualan</td>
                        <td>
                            {% if is_granted('ROLE_SALE_RECEIPT_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_sale_receipt_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_sale_receipt_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['sale_payment_header'] %}
                    <tr>
                        <td>Pelunasan Penjualan</td>
                        <td>
                            {% if is_granted('ROLE_SALE_PAYMENT_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_sale_payment_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_sale_payment_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['sale_cheque'] %}
                    <tr>
                        <td>Giro / Cek</td>
                        <td>
                            {% if is_granted('ROLE_SALE_CHEQUE') %}
                                {{ include('action.html.twig', {'url': path('transaction_sale_cheque_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_sale_cheque_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endif %}
             
    {% if menu['purchase_finance'] %}
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th colspan="3" class="bg-info lead">
                        <strong>Pembelian</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% if menu['purchase_invoice_header'] %}
                    <tr>
                        <td>Invoice Pembelian</td>
                        <td>
                            {% if is_granted('ROLE_PURCHASE_INVOICE_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_purchase_invoice_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_purchase_invoice_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['purchase_receipt_header'] %}
                    <tr>
                        <td>Tanda Terima Pembelian</td>
                        <td>
                            {% if is_granted('ROLE_PURCHASE_RECEIPT_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_purchase_receipt_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_purchase_receipt_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['purchase_payment_header'] %}
                    <tr>
                        <td>Pembayaran Pembelian</td>
                        <td>
                            {% if is_granted('ROLE_PURCHASE_PAYMENT_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_purchase_payment_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_purchase_payment_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endif %}

    {% if menu['accounting'] %}
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th colspan="3" class="bg-info lead">
                        <strong>Accounting</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% if menu['deposit_header'] %}
                    <tr>
                        <td>Penerimaan Kas / Bank</td>
                        <td>
                            {% if is_granted('ROLE_DEPOSIT_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_deposit_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_deposit_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['expense_header'] %}
                    <tr>
                        <td>Pengeluaran Kas / Bank</td>
                        <td>
                            {% if is_granted('ROLE_EXPENSE_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_expense_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_expense_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
                {% if menu['journal_voucher_header'] %}
                    <tr>
                        <td>Jurnal Umum</td>
                        <td>
                            {% if is_granted('ROLE_JOURNAL_VOUCHER_HEADER') %}
                                {{ include('action.html.twig', {'url': path('transaction_journal_voucher_header_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}
                            {% endif %}
                        </td>
                        <td>{{ include('action.html.twig', {'url': path('transaction_journal_voucher_header_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
