{% extends 'staff/layout.html.twig' %}

{% block title 'Master Menu' %}

{% block stylesheets %}
    <style>
        table thead tr th:nth-child(2), table tbody tr td:nth-child(2) { width: 30% }
        table thead tr th:nth-child(3), table tbody tr td:nth-child(3) { width: 30% }
    </style>
{% endblock %}

{% block content %}
    {% set menu = app.session.get('menu') %}
    
    {% if menu['master'] %}
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th colspan="3" class="bg-info lead">
                        <strong>Group</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Entity</td>
                    <td>{{ include('action.html.twig', {'url': path('master_entity_new'), 'label': 'Add', 'button': 'btn btn-success', 'icon': 'glyphicon glyphicon-plus'}) }}</td>
                    <td>{{ include('action.html.twig', {'url': path('master_entity_index'), 'label': 'Manage', 'button': 'btn btn-primary', 'icon': 'glyphicon glyphicon-list'}) }}</td>
                </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock %}
